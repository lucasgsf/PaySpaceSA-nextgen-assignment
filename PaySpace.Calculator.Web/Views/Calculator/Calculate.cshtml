@model PaySpace.Calculator.Web.Models.CalculatorViewModel

@{
    ViewBag.Title = "Tax Calculator";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Tax Calculator</h2>
</div>

<form asp-controller="Calculator" asp-action="Calculate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="PostalCode" class="control-label">Postal Code</label>
        <select asp-for="PostalCode" asp-items="Model.PostalCodes" class="form-control">
            <option value="" disabled>Please select a postal code</option>
        </select>
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Income" class="control-label">Income</label>
        <input asp-for="Income" class="form-control" type="number" step="1" />
        <span asp-validation-for="Income" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-4">Calculate</button>
    </div>
</form>